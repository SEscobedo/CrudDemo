<Page x:Class="CrudWPF.Formulario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CrudWPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Formulario">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" >Nome</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" Name="txtNome"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1" >Sobrenome</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" Name="txtSobrenome"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="2" >Telefone</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="2" Name="txtTelefone"></TextBox>
        <Button Grid.Column="1" Grid.Row="3" Click="Button_Click">Guardar</Button>
    </Grid>
</Page>
